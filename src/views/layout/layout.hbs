	<!-- Site Properties -->
	<title>{{ title }}</title>
	<link rel="stylesheet" type="text/css" href="/css/semanticui/reset.css">
	<link rel="stylesheet" type="text/css" href="/css/semanticui/site.css">
	<link rel="stylesheet" type="text/css" href="/css/semanticui/container.css">
