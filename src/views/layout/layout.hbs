	<link rel="stylesheet" type="text/css" href="/css/semanticui/table.css">
	<link rel="stylesheet" type="text/css" href="/css/semanticui/list.css">
	<style type="text/css">
		body {
			background-color: #DADADA;
		}
		body > .grid {
			height: 100%;
		}
		.column {
			max-width: 450px;
		}
		.ui.table td{
			padding: .3857em .7857em;
		}
		div {
			border-radius: 0px !important;
		}
		input {
			border-radius: 0px !important;
			color: white !important;
			background-color: #00000052 !important;
		}
		.attached.header {
			text-align: center;
		}
	</style>
	
<body style="background-color: black;">
	<div class="ui middle aligned center aligned grid">
		<div class="ui container" style="width: 1100px; max-width 80%;">
		<div class="ui inverted middle aligned center aligned top fixed grid menu">
			<a href="/" class="item">Home</a>
			<a href="/rules" class="item">Rules</a>
			<a href="/boards/view" class="item">Boards</a>
			{{#if logged_in}}
			<a class="right item" style="padding: 0em;">
				<a class="item">{{ username }}</a>
				<a href="/users/login" class="item">Sign-out</a>
			</a>
			{{else}}
			<a href="/users/login" class="right item">Sign-in</a>
			{{/if}}
		</div>
			<form class="ui inverted middle aligned center aligned large form" style="margin-top: 8em; margin-left: 5em; margin-right: 5em;">
		{{{ body }}}
			</form>
		</div>
	</div>
	<script src="/js/jquery/1.8.3/jquery.min.js"></script>
</body></html>